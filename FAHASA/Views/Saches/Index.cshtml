@model IEnumerable<FAHASA.Models.Sach>

@{
    ViewBag.Title = "Index";
}

<h2>Danh Mục Sách</h2>

<p>
    @Html.ActionLink("Thêm Sách", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TenSach)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LinhVuc)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GiaXuat)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GiaNhap)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.TenSach)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LinhVuc)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.GiaXuat)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.GiaNhap)
        </td>
        <td>
            @Html.ActionLink("Sửa", "Edit", new { id=item.MaSach }) |
            @Html.ActionLink("Chi Tiết", "Details", new { id=item.MaSach }) |
            @Html.ActionLink("Xóa", "Delete", new { id=item.MaSach })
        </td>
    </tr>
}

</table>
