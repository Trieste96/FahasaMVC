@model FAHASA.Models.PhieuXuat

@{
    ViewBag.Title = "Details";
}

<h2>Thông Tin Phiếu Xuất</h2>

<div>
    <h4></h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.DaiLy.TenDaiLy)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DaiLy.TenDaiLy)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.NgayGio)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NgayGio)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.NguoiNhan)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NguoiNhan)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.TongTien)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TongTien)
        </dd>

    </dl>
</div>
<p>
    <a href="/CT_PhieuXuat/Create/@Model.MaPhieu">Thêm Chi Tiết Phiếu Xuất</a>
</p>
<table class="table">
    <tr>
        <th>
            MaSach
        </th>
        <th>
            TenSach
        </th>
        <th>
            SoLuong
        </th>
        <th>
            DonGiaXuat
        </th>
        <th>
            ThanhTien
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model.CT_PhieuXuat)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MaSach)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sach.TenSach)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SoLuong)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DonGiaXuat)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ThanhTien)
            </td>
            <td>
                <a href="/CT_PhieuXuat/Edit/@item.ID">Sửa |</a>
                <a href="/CT_PhieuXuat/Delete/@item.ID">Xóa</a>
            </td>
        </tr>
    }
</table>
<p>
    @Html.ActionLink("Sửa", "Edit", new { id = Model.MaPhieu }) |
    @Html.ActionLink("Quay Về Danh Sách Phiếu Xuất", "Index")
</p>
