<p>
    @Html.ActionLink("Thêm Phiếu Nhập", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.NhanVien.TenNhanVien)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NhaXuatBan.TenNXB)
        </th>
        <th>
