            @Html.DisplayFor(modelItem => item.NhaXuatBan.TenNXB)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NguoiGiaoSach)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NgayGio)
        </td>
        <td>
            @Html.ActionLink("Sửa", "Edit", new { id=item.MaPhieu }) |
            @Html.ActionLink("Chi Tiết", "Details", new { id=item.MaPhieu }) |
