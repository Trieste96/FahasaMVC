@model IEnumerable<FAHASA.Models.BaoCaoBanHang>

@{
    ViewBag.Title = "Index";
}

<h2>Danh Sách Báo Cáo Bán Hàng</h2>

<p>
    @Html.ActionLink("Thêm Mới", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.MaBC)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NgayGio)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TongTien)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DaiLy.TenDaiLy)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    if (item.TinhTrang == true)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MaBC)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NgayGio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TongTien)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DaiLy.TenDaiLy)
            </td>
            <td>
                @Html.ActionLink("Sửa", "Edit", new { id = item.MaBC }) |
                @Html.ActionLink("Chi Tiết", "Details", new { id = item.MaBC }) |
                @Html.ActionLink("Xoa", "Delete", new { id = item.MaBC })
            </td>
        </tr>
    }
}

</table>
