<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("FAHASA", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            Quản Lý Sách
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li><a href="/Saches">Xem danh sách</a></li>
                            <li><a href="/Saches/Create">Thêm Sách</a></li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            Quản Lý Nhà Xuất Bản
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li><a href="/NhaXuatBans">Xem danh sách</a></li>
                            <li><a href="/NhaXuatBans/Create">Thêm NXB</a></li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            Quản Lý Đại Lý
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li><a href="/DaiLies">Xem danh sách</a></li>
                            <li><a href="/DaiLies/Create">Thêm Đại Lý</a></li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            Quản Lý Kho
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li><a href="/PhieuNhaps">Xem phiếu nhập</a></li>
                            <li><a href="/PhieuNhaps/Create">Thêm phiếu nhập</a></li>
                            <li><a href="/PhieuXuats">Xem phiếu xuất</a></li>
                            <li><a href="/PhieuXuats/Create">Thêm phiếu xuất</a></li>
                            <li><a href="/PhieuKiemKhoes">Xem phiếu kiểm kho</a></li>
                            <li><a href="/PhieuKiemKhoes/Create">Thêm phiếu kiểm kho</a></li>
                        </ul>
                    </li>
                    <li><a href="/ThongKe">Thông Kê</a></li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
